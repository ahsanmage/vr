<?xml version="1.0"?>
<config>
    <modules>
        <EM_Filterproducts>
            <version>1.1.0</version>
        </EM_Filterproducts>
    </modules>
    <global>
        <models>
            <filterproducts>
                <class>EM_Filterproducts_Model</class>
            </filterproducts>
        </models>
        <resources>
            <filterproducts_setup>
                <setup>
                    <module>EM_Filterproducts</module>
					<class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </filterproducts_setup>
        </resources>
        <blocks>
            <filterproducts>
                <class>EM_Filterproducts_Block</class>
            </filterproducts>
        </blocks>
        <helpers>
            <filterproducts>
                <class>EM_Filterproducts_Helper</class>
            </filterproducts>
        </helpers>
    </global>
	<frontend>
		<events>
			<sales_order_save_after>
                <observers>
                    <checkout_type_onepage_save_order_after>
                        <class>filterproducts/observer</class>
                        <method>cleanBestSellerCache</method>
                    </checkout_type_onepage_save_order_after>
                </observers>
            </sales_order_save_after>
		</events>
        <layout>
            <updates>
                <em_filterproducts>
                    <file>em_filterproducts.xml</file>
                </em_filterproducts>
            </updates>
        </layout>
	</frontend>
	<adminhtml>
		<events>
			<order_cancel_after>
                <observers>
                    <clean_bestseller_cache_after_cancel>
                        <class>filterproducts/observer</class>
                        <method>cleanBestSellerCache</method>
                    </clean_bestseller_cache_after_cancel>
                </observers>
            </order_cancel_after>
		</events>
	</adminhtml>
</config>