<?php 
/**
 * Store switcher template
 *
 * @see Mage_Core_Block_Store_Switcher
 */
?>
<?php if(count($this->getGroups())>1): ?>
<div class="em-slider owl-carousel owl-theme" data-emslider-navigation="true" data-emslider-items="3">
	<?php foreach ($this->getGroups() as $_group): ?>
		<?php 
			$name	=	strtolower($this->escapeHtml($_group->getName()));
			$name	=	str_replace(" ","_",trim($name));
		?>
		<div class="em-store-item">
            <?php $_selected = ($_group->getId()==$this->getCurrentGroupId()) ? ' selected' : '' ?>       
			<a class="em-store-switch<?php echo $_selected ?>" href="<?php echo $_group->getHomeUrl() ?>" title="<?php echo $this->escapeHtml($_group->getName()) ?>">
                <img alt="<?php echo $this->escapeHtml($_group->getName()) ?>" class="em-store-img img-responsive" src="<?php echo $this->getSkinUrl('images/storeview/'.$name.'.jpg'); ?>" />																
                <span class="image-wrap move-long" style="background-image: url('<?php echo $this->getSkinUrl('images/storeview/'.$name.'_hover.jpg'); ?>');"></span>
			</a>
            <p class="h5 text-center"><?php echo $this->escapeHtml($_group->getName()) ?></p>
		</div>
	<?php endforeach; ?>
</div>
<?php endif; ?>